<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelefonRehberi.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
             Source="telephone.png"
             HeightRequest="185"
             Aspect="AspectFit"
             SemanticProperties.Description="dot net bot in a race car number eight" />

            <Button
                x:Name="Rehber" Text="Rehber" 
                TextColor="White" BackgroundColor="#007BFF"
                CornerRadius="20" FontSize="20"
                Padding="15" Clicked="OpenDirectoryPage"
                HorizontalOptions="FillAndExpand"/>
            
            <Button
                x:Name="YeniKayit" Text="Yeni Kayıt"
                TextColor="White" BackgroundColor="#28A745"
                CornerRadius="20" FontSize="20"
                Padding="15" Clicked="OpenNewPersonRegistrtionPage"
                HorizontalOptions="FillAndExpand"/> 
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
